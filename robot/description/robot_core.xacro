<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- BASE_FOOTPRINT LINK -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>



    <!-- CHASSIS LINK -->

    <joint name="chassis1_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis1"/>
        <origin xyz="-0.05 0 -0.045"/>
    </joint>

    <link name="chassis1">
        <visual>
            <origin xyz="0.05 0 0.1"/>
            <geometry>
                <box size="0.1 0.38 0.2"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.05 0 0.1"/>
            <geometry>
                <box size="0.1 0.38 0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.6" x="0.1" y="0.38" z="0.2">
            <origin xyz="0.05 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="chassis2_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis2"/>
        <origin xyz="0.05 0 0"/>
    </joint>

    <link name="chassis2">
        <visual>
            <origin xyz="0.11 0 0.06"/>
            <geometry>
                <box size="0.22 0.22 0.12"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.11 0 0.06"/>
            <geometry>
                <box size="0.22 0.22 0.12"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.4" x="0.22" y="0.22" z="0.12">
            <origin xyz="0.11 0 0.06" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.207 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.055" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.025" radius="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.207 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.055" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.025" radius="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis2"/>
        <child link="caster_wheel"/>
        <origin xyz="0.165 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.055"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.055"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.02" radius="0.055">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    
    
</robot>